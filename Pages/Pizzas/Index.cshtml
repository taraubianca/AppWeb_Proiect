@page "/{id:int?}"
@model AppWeb_Proiect.Pages.Pizzas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].Gramaj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].Specificatie.NumeSpecificatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].PizzaIngredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PizzaD.Pizzas)
        {
            string selectedRow = "";
            if (item.ID == Model.PizzaID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gramaj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specificatie.NumeSpecificatie)
            </td>
            <td>
                @{
                    foreach (var ingredient in item.PizzaIngredients)
                    {
                        @ingredient.Ingredient.NumeIngredient <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
